{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "index.ts", "prisma/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "test-*.ts", "check-*.ts", "fix-*.ts", "scripts/**"]
}
